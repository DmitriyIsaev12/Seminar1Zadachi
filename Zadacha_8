// Написать программу, которая на вход принимает число (N) ,  а на выходе показывает все четные числа от 1 до N
        Console.Write("ВВедите число    ");
        int a = int.Parse(Console.ReadLine());
        int i = 1;
        while ( i <= a)
        {
            int x = i % 2;

            if (x == 0)
            {
                Console.Write($"{ i }, ");
            }
            i = i + 1;
        }
